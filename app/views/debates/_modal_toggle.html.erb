<!-- Button trigger modal -->
<a data-toggle="modal" data-target="#add_research_finding_<%= point.id %>">
  Add findings
</a>

  <script>
    $(document).ready(function () {
      $('#add_research_finding_<%= point.id %>').on('show.bs.modal', function (e) {
        $('#add_research_finding_<%= point.id %>').css("width","60em");
        $('#add_research_finding_<%= point.id %>').css("font-size","14px");
      })
      $('#add_research_finding_<%= point.id %>').on('hidden.bs.modal', function (e) {
        $('#add_research_finding_<%= point.id %>').css("width", "0px");
        $('#add_research_finding_<%= point.id %>').css("font-size","0px");
      })
    });
  </script>  

<!-- Modal -->
<div class="modal fade" id="add_research_finding_<%= point.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:0px; font-size: 0px;">
  <div class="modal-dialog">
    <div class='add-research_findings'>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Add new research findings</h4>
          <%=point.point%>

          <br><br/>
          <div id="pubmed_search_<%= point.id %>">
          <%= render 'researches/pubmed_search', point_id: point.id %>
          </div> 
        </div><!-- /.modal header --> 
        <div id="pubmed_results_<%= point.id %>">  
          <%= render 'researches/pubmed_results', point_id: point.id %>
        </div> 
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </div><!-- /.modal content-->
    </div>
  </div>
</div>