<% provide(:title, @debate.title) %>
  
<div class ='debate-wrapper'> 
  <h1><%= @debate.title %></h1>
  <div class='pix12'>
    Created by: <%= @debate.user.username %>
  </div>   
  <h2><%= link_to "Edit debate", edit_debate_path %></h2>
  <h2>Description:</h2>
	<p><%= @debate.description %></p>
  <h2>Notes:</h2>

  <ul>	
	  <% @debate.notes.split('|').each do |note| %>
			<li><%=note%></li>
	  <% end %>
  </ul>	

  <h2>Verdict:</h2>	
  <% if @verdicts.present? %>
    <p><%= render 'verdicts' %></p>
  <%else%>  
  No verdicts, <%=link_to "why not add one?", edit_debate_path %>
  <%end%>
</div>

<div class ='point-wrapper'>	
  <h1>Evidence</h1>
  <%= link_to "View all evidence", debate_points_path(@debate) %> |
  <%= link_to "Add evidence", new_debate_point_path(@debate) %>
  <div class="row-fluid">
    <div class= 'point'>		
      <div class="span4">
        <% if @evidence.first.present?%>     	  	
  	    	<% evidence = @evidence.first%>		    	
  	 			<%= render 'points', point: evidence %>
        <%else%>
          No Evidence Yet
        <%end%>  
	    </div>
      <div class="span4">       
        <% if @evidence.second.present?%>           
          <% evidence = @evidence.second%>         
          <%= render 'points', point: evidence %>
        <%else%>
        <%end%> 
      </div>
      <div class="span4">       
        <% if @evidence.third.present?%>           
          <% evidence = @evidence.third%>         
          <%= render 'points', point: evidence %>
        <%else%>
        <%end%> 
      </div>            
		</div>

  </div>  	
</div>  
