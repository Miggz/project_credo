<%= f.label :Question %>
<%= f.text_field :question, placeholder: "Compose affirmative (ex: Cold water is bad for digestion)..." %>

<%= f.label :Description %> 
<%= f.text_area :description, placeholder: "Compose a description..." %>

<%= f.label :Notes %>
<%= f.text_area :notes, placeholder: "Additional notes (separate bullet points with '|')..." %>

<%= f.hidden_field :user_create_id, value: current_user.id %> 
<%= f.fields_for :verdicts do |builder| %>
    <%= render 'questions/form/verdict_fields', f: builder, question_id: @question.id %>
<%end%>  

<p><%= f.link_to_add "Add a verdict", :verdicts %></p>    