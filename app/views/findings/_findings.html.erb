<div class ='researches'>
  <ul>
	<% @researches.each do |research| %>  	
	<li class ='research'>
	  <%= link_to research.title, research_path(research) %>
	  <ul class ='finding'>
	  	  <b class ='finding'>Findings:</b>
	  	    <%if research.findings.present? %>
		      <% research.findings.each do |finding| %>
			       <li class ='finding'>
			       	<%if finding.quote.present? %>			       	  
						<i> "<%= finding.quote %>" </i>    	
						<br><%= finding.finding %></br>
					<%else%>
						<%= finding.finding %>	
					<%end%>
					<%= render 'associations_form', :finding => finding %>	
			       </li>
		      <%end%>
		    <%else%>
	  	      <b class ='finding'>None logged</b>
	  	    <%end%>  		      
	  </ul>
	</li>
	<%end%>
  </ul>	
</div>