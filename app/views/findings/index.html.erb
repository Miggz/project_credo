<% provide(:title, 'All research') %>
<h2>Documented Research</h2>
<h3><%= link_to "Document a new piece of research", new_research_path(point: @point) %></h3>
<h3><%= link_to "Back to debate", debate_path(@point.debate.id) %></h3>

<div class="row">
  <div class="span4 offset1">
	<div class="search">
		<%= search_form_for @q, url: search_findings_path(point: @point),
								html: { method: :post} do |f| %>
		  <%= f.label :finding_or_quote_or_sample_def_or_research_title_cont, "Research title or findings contains" %>
		  <%= f.text_field :finding_or_quote_or_sample_def_or_research_title_cont %>
 		  
  		  <%= f.submit "Search" %>  
		<%end%>
	</div>
  </div>
</div>  				

<%= will_paginate %>

<ul class="debates">
  <%= render 'findings' %>
</ul>

<%= will_paginate %>