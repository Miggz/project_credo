<h4>Search Pubmed</h4>

<div class='pubmed-search'>
  <div class='row-fluid'>  
    <div class='span8'>  
      <%= form_tag("/researches/pubmed_search", :remote => true) do%>
        <label for="search_terms">Enter search terms</label>
        <%= text_field_tag "search_terms", nil, placeholder:"Search..." %> 
        <%= submit_tag "Search" %>
      <%end%>  
    </div>
  </div> 
  <%= render 'pubmed_results' %> 
</div>  

