<div class='row-fluid'>
<div class='pubmed-search'>
  <b>Search terms:</b>
  <%=params[:search_terms]%>

  <%= form_tag("/researches/pubmed_search", remote: true) do%>
    <%= hidden_field_tag 'search_terms', params[:search_terms] %>   
    <%= submit_tag "Back" %>
  <%end%> 
  <h1><%= @article["title"] %></h1>
  <br><b>Authors: </b><%=@article["authors"] %></br> 
  <br><b>Journal: </b><%=@article["journal"]%><b>, Published on: </b><%= @article["pubdate"]%> </br>
  <br><b>Link: </b><%="http://www.ncbi.nlm.nih.gov/pubmed/"+@pubmed_id%></br>
  <br><b>Abstract:</b></br>
  <br><%=@article["abstract"]%></br>
</div>
</div>